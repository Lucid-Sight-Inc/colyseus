{
  "name": "colyseus-arena-server",
  "private": true,
  "workspaces": [
    "bundles/*",
    "packages/*",
    "packages/drivers/*",
    "packages/transport/*",
    "packages/presence/*",
    "packages/serializer/*"
  ],
  "scripts": {
    "build-arena-lx": "rm -r dist && tsc -d --project tsconfig-arena.json && npm run copyJSFiles && npm run copyJSFilesSrc && npm run cleanUpBuild",
    "build-arena-lx-with-mon": "rm -r dist && tsc -d --project tsconfig-arena.json && npm run copyJSFiles && npm run copyJSFilesSrc",
    "build-arena": "rmdir /Q /S dist && tsc -d --project tsconfig-arena.json && npm run copyJSFiles && npm run copyJSFilesSrc",
    "copyJSFiles": "copyfiles -u 1 server/**/*.js  dist/server/",
    "copyJSFilesSrc": "copyfiles -u 1 bundles/**/*.json  dist/bundles/ && copyfiles -u 1 packages/**/*.json  dist/packages/",
    "cleanUpBuild": "rm -r dist/packages/monitor",
    "build": "rollup -c && lerna run build",
    "clean": "lerna clean",
    "boot": "lerna bootstrap",
    "test": "lerna run test --stream",
    "example": "lerna run start --scope @colyseus/example --stream",
    "update-contributors": "all-contributors generate",
    "graph": "lerna list --graph",
    "watch": "rollup -c --watch",
    "bump": "lerna version prerelease --force-publish --no-push --no-git-tag-version",
    "publish-alpha": "lerna publish prerelease --no-git-tag-version --dist-tag alpha",
    "publish-stable": "lerna publish patch --no-git-tag-version",
    "release": "lerna version --force-publish --no-push --no-git-tag-version",
    "preversion": "npm run build",
    "postinstall": "npm run boot"
  },
  "devDependencies": {
    "@lerna/batch-packages": "^3.16.0",
    "@lerna/filter-packages": "^4.0.0",
    "@lerna/project": "^4.0.0",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@rollup/plugin-typescript": "^8.2.5",
    "@types/debug": "^0.0.31",
    "@types/express": "^4.17.13",
    "@types/fossil-delta": "^1.0.0",
    "@types/jest": "^26.0.24",
    "@types/koa": "^2.13.4",
    "@types/mocha": "^5.2.7",
    "@types/node": "^16.6.1",
    "@types/sinon": "^10.0.2",
    "all-contributors-cli": "^6.20.0",
    "@types/ws": "^7.4.4",
    "assert": "^2.0.0",
    "benchmark": "^2.1.1",
    "c8": "^7.8.0",
    "colyseus.js": "^0.14.13",
    "httpie": "^2.0.0-next.13",
    "jest": "^27.0.6",
    "koa": "^2.8.1",
    "lerna": "^4.0.0",
    "minimist": "^1.2.5",
    "mocha": "^5.1.1",
    "rimraf": "^2.7.1",
    "rollup": "^2.56.2",
    "rollup-plugin-node-externals": "^2.2.0",
    "sinon": "^11.1.2",
    "ts-node": "^7.0.1",
    "ts-node-dev": "^1.1.6",
    "tslint": "^5.11.0",
    "typescript": "4.3.5"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src",
      "test"
    ],
    "reporter": [
      "html",
      "lcov"
    ],
    "all": true
  },
  "dependencies": {
    "@colyseus/arena": "^0.14.24",
    "@colyseus/monitor": "^0.14.22",
    "@colyseus/uwebsockets-transport": "^0.14.26",
    "@colyseus/ws-transport": "^0.14.21",
    "@colyseus/core": "file:./packages/core",
    "colyseus": "0.14.23",
    "@gamestdio/timer": "^1.3.2",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.16.4",
    "internal-ip": "^6.2.0",
    "mongoose": "^5.13.7",
    "morgan": "^1.10.0",
    "nanoid": "^3.1.25",
    "prom-client": "^13.2.0",
    "redis": "^3.1.2",
    "uWebSockets.js": "github:uNetworking/uWebSockets.js#v19.2.0",
    "uwebsockets-express" :"^1.2.0",
    "ws": "^7.4.5",
    "winston": "^3.3.3"
  }
}
